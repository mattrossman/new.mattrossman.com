---
import woff2 from '@fontsource-variable/raleway/files/raleway-latin-wght-normal.woff2?url'

export interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<link rel="preload" href={woff2} as="font" crossorigin />
		<style is:global>
			@font-face {
				font-family: 'RalewayVariable';
				font-style: normal;
				font-display: swap;
				font-weight: 100 900;
				src: url('@fontsource-variable/raleway/files/raleway-latin-wght-normal.woff2') format('woff2');
				unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191,
					U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
			}
		</style>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-indigo-200">
		<slot />
	</body>
</html>
