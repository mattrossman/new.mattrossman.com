---
// props: { entry: { title: string, links: Array<{ href: string, image: string, label: string }> } }
const { entry } = Astro.props
---

<div
	class="flex min-w-[160px] flex-col items-center gap-3 rounded-xl bg-white/70 p-5 shadow-lg transition hover:scale-[1.03] hover:shadow-2xl"
>
	<div class="mb-1 text-lg font-bold text-gray-800">{entry.title}</div>
	<div class="flex flex-row gap-3">
		{
			entry.links.map((link: { href: string; image: string; label: string }) => (
				<a
					href={link.href}
					target="_blank"
					rel="noopener noreferrer"
					title={link.label}
					class="rounded-full bg-gray-100 p-2 transition hover:bg-blue-100"
				>
					<img src={link.image} alt={link.label} class="h-6 w-6" />
				</a>
			))
		}
	</div>
</div>
